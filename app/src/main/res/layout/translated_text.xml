<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.wing.tree.bruni.inPlaceTranslate.view.TranslatorActivity" />

        <variable
            name="viewModel"
            type="com.wing.tree.bruni.inPlaceTranslate.viewModel.TranslatorViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fadingEdgeLength="@dimen/fading_edge_length_12dp"
            android:fillViewport="true"
            android:paddingVertical="@dimen/padding_vertical_12dp"
            android:requiresFadingEdge="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/translated_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:paddingHorizontal="@dimen/padding_horizontal_12dp"
                android:paddingTop="@dimen/padding_top_40dp"
                android:scrollbars="vertical"
                android:text="@{viewModel.translatedText}"
                android:textAppearance="@style/TextAppearance.HeadlineMedium"
                android:textColor="?colorPrimary"
                tools:text="Translated Text" />

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height_48dp"
            android:gravity="center_vertical|end"
            app:layout_constraintEnd_toEndOf="@+id/nested_scroll_view"
            app:layout_constraintStart_toStartOf="@+id/nested_scroll_view"
            app:layout_constraintTop_toTopOf="@+id/nested_scroll_view">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/display_target_language"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/padding_horizontal_12dp"
                    android:text="@{viewModel.displayTargetLanguage}"
                    android:textAppearance="@style/TextAppearance.TitleMedium"
                    android:textColor="?colorPrimary"
                    tools:text="영어" />

            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/share_translated_text"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/layout_width_48dp"
                android:layout_height="@dimen/layout_height_48dp"
                android:onClick="@{() -> activity.shareTranslatedText()}"
                app:icon="@drawable/ic_round_share_24"
                app:iconGravity="textStart"
                app:iconSize="@dimen/icon_size_24dp"
                app:rippleColor="@color/primary_ripple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/copy_translated_text_to_clipboard"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/layout_width_48dp"
                android:layout_height="@dimen/layout_height_48dp"
                android:onClick="@{() -> activity.copyTranslatedTextToClipboard()}"
                app:icon="@drawable/ic_round_content_copy_24"
                app:iconGravity="textStart"
                app:iconSize="@dimen/icon_size_24dp"
                app:rippleColor="@color/primary_ripple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/speak_translated_text"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/layout_width_48dp"
                android:layout_height="@dimen/layout_height_48dp"
                android:onClick="@{() -> activity.speakTranslatedText()}"
                app:icon="@drawable/ic_round_volume_up_24"
                app:iconGravity="textStart"
                app:iconSize="@dimen/icon_size_24dp"
                app:rippleColor="@color/primary_ripple" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
